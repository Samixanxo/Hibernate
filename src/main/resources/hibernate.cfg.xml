<?xml version="1.0"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <!-- Configuración de conexión a MongoDB -->
        <property name="hibernate.ogm.datastore.provider">mongodb</property>
		<property name="hibernate.ogm.datastore.database">viticulture</property>
		<property name="hibernate.ogm.mongodb.connection_uri">mongodb://localhost:27017</property>
		<property name="hibernate.ogm.datastore.create_database">true</property>
		<property name="hibernate.dialect">org.hibernate.ogm.dialect.mongodb.MongoDBDialect</property>


        <!-- Mapeos de clases -->
        <mapping class="model.Campo"/>
        <mapping class="model.Bodega"/>
        <mapping class="model.Vid"/>
        <mapping class="model.Entrada"/>
    </session-factory>
</hibernate-configuration>
